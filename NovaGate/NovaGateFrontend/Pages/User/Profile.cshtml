@page
@model NovaGateFrontend.Pages.User.Profile

@{
    ViewData["Title"] = "Profil";
}

<h2>Profil</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="UserProfile.Username"></label>
        <input asp-for="UserProfile.Username" class="form-control" />
        <span asp-validation-for="UserProfile.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserProfile.Email"></label>
        <input asp-for="UserProfile.Email" class="form-control" />
        <span asp-validation-for="UserProfile.Email" class="text-danger"></span>
    </div>
    <!-- Weitere Felder nach Bedarf -->
    <button type="submit" class="btn btn-primary">Speichern</button>
</form>