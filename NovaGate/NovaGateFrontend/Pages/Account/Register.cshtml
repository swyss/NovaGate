@page
@model NovaGateFrontend.Pages.Account.Register

@{
    ViewData["Title"] = "Registrieren";
}

<h2>Registrieren</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="RegistrationInfo.Username"></label>
        <input asp-for="RegistrationInfo.Username" class="form-control" />
        <span asp-validation-for="RegistrationInfo.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegistrationInfo.Email"></label>
        <input asp-for="RegistrationInfo.Email" class="form-control" />
        <span asp-validation-for="RegistrationInfo.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegistrationInfo.Password"></label>
        <input asp-for="RegistrationInfo.Password" class="form-control" type="password" />
        <span asp-validation-for="RegistrationInfo.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Registrieren</button>
</form>